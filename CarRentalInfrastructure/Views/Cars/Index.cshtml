@model IEnumerable<CarRentalDomain.Model.Car>

@{
    ViewData["Title"] = ViewBag.CategoryName != null
        ? $"Автомобілі категорії: {ViewBag.CategoryName}"
        : "Усі автомобілі";
}

<style>
    body {
        background-color: #f8f9fa;
        color: #212529;
    }

    .premium-header {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        color: white;
        padding: 2rem 0;
        margin-bottom: 2.5rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
    }

        .premium-header h2 {
            font-weight: 600;
            font-size: 1.8rem;
            letter-spacing: 0.5px;
        }

    .premium-card {
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: white;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .premium-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.12);
            border-color: #c5a880;
        }

        .premium-card img {
            height: 180px;
            object-fit: cover;
            width: 100%;
        }

        .premium-card .card-body {
            padding: 1.25rem;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .premium-card .car-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #1a1a1a;
        }

        .premium-card .car-meta {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 0.75rem;
        }

    .premium-badge {
        display: inline-block;
        padding: 0.25rem 0.6rem;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .badge-license {
        background-color: #f1f3f5;
        color: #495057;
        border: 1px solid #dee2e6;
    }

    .badge-category {
        background: linear-gradient(135deg, #c5a880 0%, #a68a64 100%);
        color: white;
    }

    .premium-actions {
        margin-top: auto;
        display: flex;
        gap: 0.5rem;
    }

        .premium-actions .btn {
            flex: 1;
            font-size: 0.85rem;
            padding: 0.4rem 0.6rem;
            border-radius: 6px;
            transition: all 0.2s;
        }

    .btn-edit {
        border-color: #ffc107;
        color: #212529;
    }

        .btn-edit:hover {
            background-color: #ffc107;
            color: white;
        }

    .btn-details {
        border-color: #20c997;
        color: #212529;
    }

        .btn-details:hover {
            background-color: #20c997;
            color: white;
        }

    .btn-delete {
        border-color: #dc3545;
        color: #212529;
    }

        .btn-delete:hover {
            background-color: #dc3545;
            color: white;
        }

    .no-photo {
        background-color: #f8f9fa;
        color: #adb5bd;
        font-style: italic;
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        background: white;
        border-radius: 12px;
        border: 1px dashed #e0e0e0;
    }

    .btn-add {
        background: linear-gradient(135deg, #c5a880 0%, #a68a64 100%);
        border: none;
        color: white;
        font-weight: 500;
    }

        .btn-add:hover {
            background: linear-gradient(135deg, #a68a64 0%, #8a704f 100%);
            transform: scale(1.03);
        }

    .btn-back {
        border: 1px solid #ced4da;
        color: #495057;
    }

        .btn-back:hover {
            background-color: #f8f9fa;
            color: #212529;
        }
</style>

<div class="container py-4">
    <div class="premium-header text-center">
        <div class="container">
            <h2>
                @if (ViewBag.CategoryName != null)
                {
                    <span>Автомобілі категорії: <strong>@ViewBag.CategoryName</strong></span>
                }
                else
                {
                    <span>Наш автопарк</span>
                }
            </h2>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div></div> 
        <div>
            @if (ViewBag.CategoryId != null)
            {
                <a asp-action="Create" asp-route-categoryId="@ViewBag.CategoryId" asp-route-categoryName="@ViewBag.CategoryName"
                   class="btn btn-add px-4 py-2">
                    <i class="bi bi-plus-circle me-1"></i> Додати автомобіль
                </a>
            }
            else
            {
                <a asp-action="Create" class="btn btn-add px-4 py-2">
                    <i class="bi bi-plus-circle me-1"></i> Додати автомобіль
                </a>
            }
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-car-front" style="font-size: 3rem; color: #c5a880;"></i>
            <h4 class="mt-3">Автомобілів не знайдено</h4>
            <p class="text-muted">Наразі в цій категорії немає доступних автомобілів.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="premium-card">
                        @if (!string.IsNullOrEmpty(item.PhotoPath))
                        {
                            <img src="@item.PhotoPath" alt="Фото @item.Make @item.Model" />
                        }
                        else
                        {
                            <div class="no-photo d-flex align-items-center justify-content-center" style="height: 180px;">
                                Немає фото
                            </div>
                        }

                        <div class="card-body">
                            <h5 class="car-title">@item.Make @item.Model</h5>
                            <p class="car-meta">
                                <i class="bi bi-calendar me-1"></i> @item.Year р.
                            </p>
                            <p>
                                <span class="premium-badge badge-license">@item.LicensePlate</span>
                            </p>
                            <p>
                                <span class="premium-badge badge-category">@item.Category?.Name</span>
                            </p>

                            <div class="premium-actions">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-5 text-center">
        @if (ViewBag.CategoryId != null)
        {
            <a asp-controller="Categories" asp-action="Index" class="btn btn-back px-4 py-2">
                <i class="bi bi-arrow-left me-1"></i> Повернутися до категорій
            </a>
        }
        else
        {
            <a asp-controller="Home" asp-action="Index" class="btn btn-back px-4 py-2">
                <i class="bi bi-house me-1"></i> На головну
            </a>
        }
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}