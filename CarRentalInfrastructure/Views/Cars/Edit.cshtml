@model CarRentalDomain.Model.Car

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color: #333; text-align: center;">Edit</h1>

<h4 style="color: #1e3c72;">Car</h4>
<hr style="border-color: #ccc;" />
<div class="row justify-content-center">
    <div class="col-md-6" style="background-color: #f9f9f9; padding: 20px; border-radius: 10px; color: #333;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Make" class="control-label" style="font-weight: bold; color: #1e3c72;"></label>
                <input asp-for="Make" class="form-control" style="background-color: #fff; color: #333; border: 1px solid #ccc;" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label" style="font-weight: bold; color: #1e3c72;"></label>
                <input asp-for="Model" class="form-control" style="background-color: #fff; color: #333; border: 1px solid #ccc;" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label" style="font-weight: bold; color: #1e3c72;"></label>
                <input asp-for="Year" class="form-control" style="background-color: #fff; color: #333; border: 1px solid #ccc;" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicensePlate" class="control-label" style="font-weight: bold; color: #1e3c72;"></label>
                <input asp-for="LicensePlate" class="form-control" style="background-color: #fff; color: #333; border: 1px solid #ccc;" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoPath" class="control-label" style="font-weight: bold; color: #1e3c72;"></label>
                <input asp-for="PhotoPath" class="form-control" style="background-color: #fff; color: #333; border: 1px solid #ccc;" />
                <span asp-validation-for="PhotoPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label" style="font-weight: bold; color: #1e3c72;"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId" style="background-color: #fff; color: #333; border: 1px solid #ccc;"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary" style="background-color: #d4a373; color: #fff; border: none; padding: 10px 20px; border-radius: 5px;" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" style="color: #d4a373; text-decoration: none; padding: 10px 20px; display: inline-block;">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}