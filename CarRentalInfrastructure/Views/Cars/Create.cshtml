@model CarRentalDomain.Model.Car

@{
    ViewData["Title"] = "Додати автомобіль";
}

<h1 style="color: #333; text-align: center;">Додати новий автомобіль</h1>

<hr style="border-color: #ccc;" />
<div class="row justify-content-center">
    <div class="col-md-6" style="background-color: #f9f9f9; padding: 20px; border-radius: 10px; color: #333;">
        <form asp-action="Create" enctype="multipart/form-data" style="color: #333;">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Make" class="control-label">Марка</label>
                <input asp-for="Make" class="form-control" style="background-color: #fff; color: #333; border: 1px solid #ccc;" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Model" class="control-label">Модель</label>
                <input asp-for="Model" class="form-control" style="background-color: #fff; color: #333; border: 1px solid #ccc;" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Year" class="control-label">Рік випуску</label>
                <input asp-for="Year" class="form-control" type="number" min="1900" max="2025" style="background-color: #fff; color: #333; border: 1px solid #ccc;" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LicensePlate" class="control-label">Номерний знак</label>
                <input asp-for="LicensePlate" class="form-control" style="background-color: #fff; color: #333; border: 1px solid #ccc;" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Категорія</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId" style="background-color: #fff; color: #333; border: 1px solid #ccc;"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Фото авто</label>
                <input type="file" name="Photo" class="form-control" accept="image/*" style="background-color: #fff; color: #333; border: 1px solid #ccc;" />
                <span class="text-muted" style="color: #666;">Оберіть зображення (JPG, PNG)</span>
            </div>

            <div class="form-group mt-3 text-center">
                <input type="submit" value="Зберегти" class="btn btn-primary" style="background-color: #d4a373; color: #fff; border: none; padding: 10px 20px; border-radius: 5px;" />
                <a asp-action="Index" class="btn btn-secondary ms-2" style="background-color: #ccc; color: #333; padding: 10px 20px; border-radius: 5px;">Скасувати</a>
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" style="color: #d4a373; text-decoration: none;">← Повернутися до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}