@model IEnumerable<CarRentalDomain.Model.Rental>

@{
    ViewData["Title"] = "Оренди";
}

<style>
    body {
        background-color: #f8f9fa;
        color: #212529;
    }

    .premium-header {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        color: white;
        padding: 2rem 0;
        margin-bottom: 2.5rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
    }

    .premium-card {
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        padding: 1.5rem;
        background: white;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

        .premium-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.1);
            border-color: #c5a880;
        }

    .rental-dates {
        display: flex;
        gap: 1.5rem;
        font-size: 0.95rem;
    }

        .rental-dates div {
            display: flex;
            flex-direction: column;
        }

        .rental-dates strong {
            color: #1a1a1a;
            font-weight: 600;
        }

        .rental-dates span {
            color: #495057;
        }

    .rental-car-customer {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 1rem;
        padding-top: 0.5rem;
        border-top: 1px solid #eee;
    }

    .rental-item {
        font-size: 0.95rem;
    }

        .rental-item strong {
            color: #1a1a1a;
            display: block;
            margin-bottom: 0.2rem;
        }

    .notes-section {
        font-style: italic;
        color: #6c757d;
        padding: 0.75rem 0;
        border-top: 1px dashed #eee;
        border-bottom: 1px dashed #eee;
    }

    .rental-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: auto;
        justify-content: flex-end;
    }

        .rental-actions .btn {
            font-size: 0.85rem;
            padding: 0.35rem 0.7rem;
            border-radius: 6px;
        }

    .btn-edit {
        border-color: #ffc107;
        color: #212529;
    }

        .btn-edit:hover {
            background-color: #ffc107;
            color: white;
        }

    .btn-details {
        border-color: #20c997;
        color: #212529;
    }

        .btn-details:hover {
            background-color: #20c997;
            color: white;
        }

    .btn-delete {
        border-color: #dc3545;
        color: #212529;
    }

        .btn-delete:hover {
            background-color: #dc3545;
            color: white;
        }

    .empty-state {
        text-align: center;
        padding: 3rem;
        background: white;
        border-radius: 12px;
        border: 1px dashed #e0e0e0;
        margin-top: 1.5rem;
    }

    .btn-add {
        background: linear-gradient(135deg, #c5a880 0%, #a68a64 100%);
        border: none;
        color: white;
        font-weight: 500;
        padding: 0.6rem 1.5rem;
        font-size: 1rem;
        border-radius: 8px;
    }

        .btn-add:hover {
            background: linear-gradient(135deg, #a68a64 0%, #8a704f 100%);
            transform: scale(1.03);
        }

    .btn-back {
        border: 1px solid #ced4da;
        color: #495057;
        padding: 0.5rem 1.2rem;
    }

        .btn-back:hover {
            background-color: #f8f9fa;
            color: #212529;
        }

    .date-value {
        font-weight: 600;
        color: #212529;
    }
</style>

<div class="container py-4">
    <div class="premium-header text-center">
        <div class="container">
            <h2>Історія оренд</h2>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div></div>
        <a asp-action="Create" class="btn btn-add">
            <i class="bi bi-calendar-plus me-1"></i> Створити оренду
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-calendar2-x" style="font-size: 3rem; color: #c5a880;"></i>
            <h4 class="mt-3">Оренд не знайдено</h4>
            <p class="text-muted">Створіть першу оренду, щоб відстежувати історію.</p>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var item in Model)
            {
                <div class="col-12">
                    <div class="premium-card">
                        <div class="rental-dates">
                            <div>
                                <strong>Оренда</strong>
                                <span class="date-value">@item.RentalDate.ToString("dd.MM.yyyy HH:mm")</span>
                            </div>
                            <div>
                                <strong>Повернення</strong>
                                <span class="date-value">
                                    @(item.ReturnDate.HasValue ? item.ReturnDate.Value.ToString("dd.MM.yyyy HH:mm") : "ще не повернуто")
                                </span>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(item.Notes))
                        {
                            <div class="notes-section">
                                <strong>Примітки:</strong> @item.Notes
                            </div>
                        }

                        <div class="rental-car-customer">
                            <div class="rental-item">
                                <strong>Автомобіль</strong>
                                <span>@item.Car?.Make @item.Car?.Model (@item.Car?.LicensePlate)</span>
                            </div>
                            <div class="rental-item">
                                <strong>Клієнт</strong>
                                <span>@item.Customer?.FullName</span>
                            </div>
                        </div>

                        <div class="rental-actions">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-edit">
                                <i class="bi bi-pencil"></i> Редагувати
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-details">
                                <i class="bi bi-eye"></i> Деталі
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-delete">
                                <i class="bi bi-trash"></i> Видалити
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-5 text-center">
        <a asp-controller="Home" asp-action="Index" class="btn btn-back">
            <i class="bi bi-house me-1"></i> На головну
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}