@model CarRentalDomain.Model.Rental

@{
    ViewData["Title"] = "Нова оренда";
}

<h1 style="color: #333; text-align: center;">Нова оренда</h1>

<hr style="border-color: #ccc;" />
<div class="row justify-content-center">
    <div class="col-md-6" style="background-color: #f9f9f9; padding: 20px; border-radius: 10px; color: #333;">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CustomerId" class="control-label" style="font-weight: bold; color: #1e3c72;">Клієнт</label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId" style="background-color: #fff; color: #333; border: 1px solid #ccc;">
                    <option value="">-- Оберіть клієнта --</option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CarId" class="control-label" style="font-weight: bold; color: #1e3c72;">Автомобіль</label>
                <select asp-for="CarId" class="form-control" asp-items="ViewBag.CarId" style="background-color: #fff; color: #333; border: 1px solid #ccc;">
                    <option value="">-- Оберіть авто --</option>
                </select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RentalDate" class="control-label" style="font-weight: bold; color: #1e3c72;">Дата оренди</label>
                <input asp-for="RentalDate" class="form-control" type="datetime-local" style="background-color: #fff; color: #333; border: 1px solid #ccc;" />
                <span asp-validation-for="RentalDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label" style="font-weight: bold; color: #1e3c72;">Дата повернення</label>
                <input asp-for="ReturnDate" class="form-control" type="datetime-local" style="background-color: #fff; color: #333; border: 1px solid #ccc;" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Notes" class="control-label" style="font-weight: bold; color: #1e3c72;">Примітки</label>
                <textarea asp-for="Notes" class="form-control" style="background-color: #fff; color: #333; border: 1px solid #ccc;"></textarea>
            </div>

            <div class="form-group mt-3 text-center">
                <input type="submit" value="Зберегти" class="btn btn-primary" style="background-color: #d4a373; color: #fff; border: none; padding: 10px 20px; border-radius: 5px;" />
                <a asp-action="Index" class="btn btn-secondary ms-2" style="background-color: #ccc; color: #333; padding: 10px 20px; border-radius: 5px;">Скасувати</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}