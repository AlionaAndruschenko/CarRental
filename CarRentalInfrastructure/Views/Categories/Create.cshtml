@model CarRentalDomain.Model.Category

@{
    ViewData["Title"] = "Create";
}

<h1 style="color: #333; text-align: center;">Create</h1>

<h4 style="color: #1e3c72;">Category</h4>
<hr style="border-color: #ccc;" />
<div class="row justify-content-center">
    <div class="col-md-6" style="background-color: #f9f9f9; padding: 20px; border-radius: 10px; color: #333;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label" style="font-weight: bold; color: #1e3c72;"></label>
                <input asp-for="Name" class="form-control" style="background-color: #fff; color: #333; border: 1px solid #ccc;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary" style="background-color: #d4a373; color: #fff; border: none; padding: 10px 20px; border-radius: 5px;" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" style="color: #d4a373; text-decoration: none; padding: 10px 20px; display: inline-block;">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}